<h2>It will reviewed and posted once it is approved!</h2>

<h4>Preview</h4>

{{#results}}
<article class="c-main-post -{{ type }}" data-timestamp="{{ timestamp }}">
    {{#has_image}}
    <img class="c-main-post_image" src="/uploads/{{ image }}" alt="">
    {{/has_image}}
    <div class="c-main-post_content">
    {{#has_text}}
        <p class="c-main-post_text h3">{{ text }}</p>
    {{/has_text}}
        <p class="c-main-post_author h4">{{ author }}</p>
    </div>
</article>
{{/results}}