<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <title>EventFeed</title>
        <link rel="stylesheet" href="/static/css/normalize.css">
        <link rel="stylesheet" href="/static/css/main.css">
        <script src="/static/js/vendor/modernizr-2.7.1.min.js"></script>
    </head>
    <body>
        <header>
            <p>EventFeed</p>
        </header>
        <div id="columns">
            <div class="column">
            {{#left_posts}}
                <div data-timestamp="{{ timestamp }}" class="post {{ type }}">
                {{#is_text}}
                    <p><strong>{{ author }}:</strong> {{ text }}</p>
                {{/is_text}}
                {{#is_hybrid}}
                    <img src="/uploads/{{ image }}">
                    <div class="text"><p><strong>{{ author }}:</strong> {{ text }}</p></div>
                {{/is_hybrid}}
                {{#is_image}}
                    <img src="/uploads/{{ image }}" alt="">
                {{/is_image}}
                </div>
            {{/left_posts}}
            </div>
            <div class="column">
            {{#right_posts}}
                <div data-timestamp="{{ timestamp }}" class="post {{ type }}">
                {{#is_text}}
                    <p><strong>{{ author }}:</strong> {{ text }}</p>
                {{/is_text}}
                {{#is_hybrid}}
                    <img src="/uploads/{{ image }}">
                    <div class="text"><p><strong>{{ author }}:</strong> {{ text }}</p></div>
                {{/is_hybrid}}
                {{#is_image}}
                    <img src="/uploads/{{ image }}" alt="">
                {{/is_image}}
                </div>
            {{/right_posts}}
            </div>
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="/static/js/vendor/jquery-1.10.2.min.js"><\/script>')</script>
        <script src="/static/js/plugins.js"></script>
        <script src="/static/js/main.js"></script>
    </body>
</html>